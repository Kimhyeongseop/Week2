<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="My Page"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="김아무개"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/email" />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="tmp@email.com"
        android:textSize="20dp"
        android:textColor="#b8c2e6"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintRight_toRightOf="parent" />


    <View
        android:layout_width="350dp"
        android:layout_height="1.3dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/assets_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorYellow"
        android:text="Assets"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/money"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="900000"
        android:textSize="20dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/assets_text"
        app:layout_constraintBottom_toBottomOf="@id/assets_text" />


    <TextView
        android:id="@+id/profit_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/money"
        android:text="Profit"
        android:textColor="@color/colorYellow"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintRight_toLeftOf="@id/di"
        app:layout_constraintTop_toBottomOf="@id/assets_text" />

    <TextView
        android:id="@+id/di"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="-10000"
        android:textSize="20dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/profit_text"
        app:layout_constraintBottom_toBottomOf="@id/profit_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lc"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/di"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profit_text"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="20dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorYellow"
        app:layout_constraintLeft_toLeftOf="@id/money"
        app:layout_constraintRight_toLeftOf="@id/total"
        app:layout_constraintTop_toBottomOf="@id/lc"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="980000000"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/total_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/total_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>